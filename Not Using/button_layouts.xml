<layout id="myButtonLayout">
	<button x="10" y="130" width="100" height="50" >
		<state id="stateDefault" bitmap="@Drawables.clockIn_default" />
		<state id="stateHighlighted" bitmap="@Drawables.clockIn_highlighted" />
		<param name="behavior">onClockIn</param>
	</button>
	<button x="120" y="130" width="100" height="50" >
		<state id="stateDefault" bitmap="@Drawables.clockOut_default" />
		<state id="stateHighlighted" bitmap="@Drawables.clockOut_highlighted" />
		<param name="behavior">onClockOut</param>
	</button>
	<button x="center" y="180" width="100" height="50" >
		<state id="stateDefault" bitmap="@Drawables.break_default" />
		<state id="stateHighlighted" bitmap="@Drawables.break_highlighted" />
		<state id="stateDisabled" bitmap="@Drawables.break_disabled" />
		<param name="behavior">onBreak</param>
	</button>

</layout>